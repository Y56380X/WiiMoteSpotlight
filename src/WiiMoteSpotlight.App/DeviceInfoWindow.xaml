<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="Transparent"
        HasSystemDecorations="False"
        x:Class="WiiMoteSpotlight.App.DeviceInfoWindow"
        Height="80" Width="150"
        Title="WiiMoteSpotlight.App">
    <Border CornerRadius="5" Background="#BF303030">
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="14" Foreground="white" Text="Battery: " />
                <TextBlock FontSize="14" Foreground="white" Text="{Binding BatteryPercentage}" />
                <TextBlock FontSize="14" Foreground="white" Text="%" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
